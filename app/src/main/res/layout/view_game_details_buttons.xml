<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_play_now_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/play_now_button"
        android:textAllCaps="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:textSize="24sp"
        android:paddingVertical="6dp"
        android:textColor="@color/white"
        android:background="@color/green_clickable"
        android:drawableEnd="@drawable/ic_exit_app"
        android:paddingHorizontal="10dp"
        android:drawableTint="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/tv_play_later_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tv_play_later_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/menu_color"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingHorizontal="30dp"
        android:src="@drawable/ic_play_later"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_play_now_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_play_now_button"
        app:layout_constraintTop_toTopOf="@+id/tv_play_now_button" />
</androidx.constraintlayout.widget.ConstraintLayout>